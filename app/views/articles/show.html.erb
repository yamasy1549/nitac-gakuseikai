<article class="article">
  <h2><%= @article.title %>（<%= @article.created_at.strftime("%Y/%m/%d") %>）</h2>

  <% if user_signed_in? %>
    <div class="btn-actions">
      <%= btn_xs_edit(edit_article_path(@article)) %>
      <%= btn_xs_delete(@article) %>
    </div>
  <% end %>

  <p><%= simple_format(@article.content.html_safe) %></p>
  <% @article.attached_images.each do |image| %>
    <%= image_tag(image.url.url(:pixel_face), alt: @article.title, class: 'article-img') if image.present? %>
  <% end %>
</article>
